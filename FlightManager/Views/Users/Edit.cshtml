@model FlightManager.ViewModels.UserEditViewModel

@{
    ViewData["Title"] = "User Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName">Име</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Фамилия</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalNo">ЕГН</label>
                <input asp-for="PersonalNo" class="form-control" />
                <span asp-validation-for="PersonalNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address">Адрес</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone">Телефон</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role">Роля</label>
                <select asp-for="Role" class="form-control">
                    <option value="1">Администратор</option>
                    <option value="2">Служител</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Запис" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
