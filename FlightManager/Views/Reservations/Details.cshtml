@model FlightsManager.Data.Models.Reservation

@{
    ViewData["Title"] = "Details";
}

<h1>Детайли</h1>

<div>
    <h4>Резервация</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Потвърдена
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsConfirmed)
        </dd>
        <dt class="col-sm-2">
            Полет
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.FlightNumber)
        </dd>
        <dt class="col-sm-2">
            Пътници
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Passengers)
            <hr class="mb-0"/>
            <div>
                <ul class="list-group list-group-flush ">
                    @foreach (var (passenger, index) in Model.Passengers.Select((value, i) => (value, i)))
                    {
                    <li class="list-group-item">@(index+1).  <strong>@passenger.Passenger.PersonalNo</strong> @passenger.Passenger.FirstName @passenger.Passenger.MiddleName @passenger.Passenger.LastName </li>
                    }
                </ul>
            </div>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Промяна</a> |
    <a asp-action="Index">Списък с всички резервации</a>
</div>
